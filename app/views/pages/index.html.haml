.jumbotron
  .container
    .row
      .col-md-6
        %h2 Stack up your favorite websites!
        %p Collect, categorize, and share with your friends
      - unless user_signed_in?
        .col-md-6
          %h2 Sign up

          = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
            = devise_error_messages!
            .form-group
              = f.text_field :username, :autofocus => true, class: 'form-control', placeholder: 'Username'
            .form-group
              = f.email_field :email, class: 'form-control', placeholder: 'Email@example.com'
            .form-group
              = f.password_field :password, class: 'form-control', placeholder: 'Password'
            .form-group
              = f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password Confirmation'
            %div= f.submit "Sign up", class: 'btn btn-primary btn-lg'
          = render "devise/shared/links"
                
